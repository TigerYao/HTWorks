<?xml version="1.0" encoding="utf-8"?><!-- 题目选项item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_arena_question_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_choice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="A"
        android:textSize="16sp" />

    <com.huatu.handheld_huatu.view.custom.ExerciseTextView
        android:id="@+id/etv_answer_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tv_choice"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/arena_exam_common_text"
        android:textSize="16sp" />
</RelativeLayout>