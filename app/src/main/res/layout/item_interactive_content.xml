<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg">

    <TextView
        android:id="@+id/chatnametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/chattimetext"
        android:ellipsize="end"
        android:lines="1"
        android:text="关于"
        android:textColor="#438c44"
        android:textSize="12sp"
        app:layout_marginLeftPercent="4.1%w"
        app:layout_marginRightPercent="6.1%w"
        app:layout_textSizePercent="3.3%w" />

    <TextView
        android:id="@+id/chattimetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/chatnametext"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/chatnametext"
        android:layout_marginRight="@dimen/chat_listview_time_right"
        android:gravity="center"
        android:lines="1"
        android:text="@string/displaytime"
        android:textColor="@color/chat_time_display"
        android:textSize="12sp"
        app:layout_marginRightPercent="6.1%w"
        app:layout_textSizePercent="3.3%w" />

    <TextView
        android:id="@+id/chatcontexttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/chatnametext"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="9dp"
        android:paddingBottom="5dp"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_marginLeftPercent="4.1%w"
        app:layout_marginTopPercent="2.5%w"
        app:layout_paddingBottomPercent="1.3%w"
        app:layout_textSizePercent="4.1%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>