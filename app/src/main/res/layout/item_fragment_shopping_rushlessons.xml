<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/item_shop_img"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:scaleType="fitXY"
                 android:layout_gravity="bottom|right"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/item_shop_mark_today"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
               android:src="@mipmap/mark_today2"  />

            <TextView
                android:id="@+id/group_tag_txt"
                android:background="@drawable/group_tag_bg_selector"
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:layout_height="wrap_content"
                android:text="已拼"
                android:visibility="gone"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/red_tag_txt"
                android:background="@drawable/group_tag_bg_selector"
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:paddingBottom="2dp"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:layout_height="wrap_content"
                android:text="已拼"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_shop_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_shop_tv_teacher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/gray_999999"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/item_shop_tv_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/gray_999999"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_shop_tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginRight="8dp"
            android:textColor="@color/gray_666666"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/item_shop_buy_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_shop_tv_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="#bfbfbf"/>
        <TextView
            android:id="@+id/item_shop_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textColor="@color/main_color"/>
        <TextView
            android:id="@+id/item_shop_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#f16140"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
