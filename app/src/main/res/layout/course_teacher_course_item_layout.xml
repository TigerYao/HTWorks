<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:id="@+id/course_teacher_course_item_img"
            android:layout_width="100dp"
            android:layout_height="74dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
             />

        <ImageView
            android:id="@+id/show_group"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="left|top"
            android:src="@mipmap/group"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/show_red"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="top"
            android:layout_toRightOf="@id/show_group"
            android:src="@mipmap/redmoney"
            android:visibility="gone" />
        <TextView
            android:id="@+id/course_teacher_course_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/course_teacher_course_item_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/course_teacher_course_item_teacher"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/course_teacher_course_item_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/course_teacher_course_item_lesson_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/course_teacher_course_item_buy_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#ec74a0"
            android:layout_centerVertical="true"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/course_teacher_course_item_buy_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/course_teacher_course_item_buy_num"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:text="@string/lesson_tv_buy_grab"
            />

        <TextView
            android:id="@+id/course_teacher_course_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Â¥0"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/red250"/>
        <TextView
            android:id="@+id/course_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/course_teacher_course_item_price"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="#9B9B9B"
            />
    </RelativeLayout>
    <View
        android:id="@+id/divider_judge"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f3f3f3"/>
</LinearLayout>
