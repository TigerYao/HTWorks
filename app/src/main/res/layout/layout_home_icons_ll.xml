<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_paper_type_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp" />

    <com.huatu.handheld_huatu.view.CustomScrollBar
        android:id="@+id/scroll_bar"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/recycler_view_names"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_bar_bg" />
</RelativeLayout>