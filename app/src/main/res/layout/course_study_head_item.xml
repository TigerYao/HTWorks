<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/current_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/study_choose_date_icon"
        android:shadowColor="#4d000000"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3.0"
        android:text="11月"
        android:textColor="#ffffffff"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/week_title_style"
            android:text="周一" />

        <TextView
            style="@style/week_title_style"
            android:text="周二" />

        <TextView
            style="@style/week_title_style"
            android:text="周三" />

        <TextView
            style="@style/week_title_style"
            android:text="周四" />

        <TextView
            style="@style/week_title_style"
            android:text="周五" />

        <TextView
            style="@style/week_title_style"
            android:text="周六" />

        <TextView
            style="@style/week_title_style"
            android:text="周日" />
    </LinearLayout>

    <com.huatu.handheld_huatu.ui.WeekView
        android:id="@+id/date_weekview"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_rectangle_top_ffffff"
        android:minHeight="16dp">

        <TextView
            android:id="@+id/tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:drawableRight="@drawable/zf_icon_a"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="查看课程表"

            android:textColor="#ff000000"
            android:textSize="15.6sp" />

        <ProgressBar
            android:id="@+id/loadwait_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="40dp"
            android:indeterminateDrawable="@anim/rotate_wait_loading"
            android:indeterminateDuration="1500"
            android:visibility="gone" />
    </FrameLayout>


    <com.huatu.handheld_huatu.ui.CalendarItemView
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="18:30"
            android:textColor="#ff000000"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="90dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="2019年教师招聘《教育综合知识》 金榜刷题班（不含回放及图书）"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘有珍老师"
                android:textColor="#ff9b9b9b"
                android:textSize="12sp" />
        </LinearLayout>

        <com.huatu.handheld_huatu.ui.StatusbgTextView
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:gravity="center"

            android:text="进入教室"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            app:qmui_backgroundColor="#FF3F47"
            app:qmui_radiusBottomLeft="14dp"
            app:qmui_radiusTopLeft="14dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="26dp"
            android:background="#CCDEFF"></View>
    </com.huatu.handheld_huatu.ui.CalendarItemView>

    <com.huatu.handheld_huatu.ui.CalendarItemView
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_rectangle_bottom_ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="18:30"
            android:textColor="#ff000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="90dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="2019年教师招聘《教育综合知识》 金榜刷题班（不含回放及图书）"
                android:textColor="#ff000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘有珍老师"
                android:textColor="#ff9b9b9b"
                android:textSize="12sp" />
        </LinearLayout>

        <com.huatu.handheld_huatu.ui.StatusbgTextView
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:gravity="center"

            android:text="进入教室"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            app:qmui_backgroundColor="#FF3F47"
            app:qmui_radiusBottomLeft="14dp"
            app:qmui_radiusTopLeft="14dp" />


        <TextView
            android:id="@+id/no_date_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_rectangle_bottom_ffffff"
            android:clickable="true"
            android:gravity="center"
            android:lineSpacingExtra="35dp"
            android:text="暂无直播安排，安排一下"
            android:textColor="#ff9b9b9b"
            android:textSize="16sp" />

    </com.huatu.handheld_huatu.ui.CalendarItemView>

    <include
        layout="@layout/course_study_after_item"
        android:layout_width="match_parent"
        android:layout_height="86dp" />
</LinearLayout>