<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/base_view_pager_title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/base_view_pager_title_left_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="15sp"
            android:visibility="gone"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/base_view_pager_title_tab_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tabIndicatorColor="@color/button_bg_click"
            app:tabPaddingEnd="5dp"
            app:tabPaddingStart="5dp"
            app:tabSelectedTextColor="#e9304e"
            app:tabTextAppearance="@style/tab_appearance"
            app:tabTextColor="#666666"/>
        <TextView
            android:id="@+id/base_view_pager_title_right_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="15sp"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/base_view_pager_custom_title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/buy_detail_intro_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课程简介"
            android:textSize="16sp"
            android:textColor="#e9304e"/>
        <TextView
            android:id="@+id/buy_detail_syllabus_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="课程大纲"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bfbfbf"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/base_view_pager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</LinearLayout>
