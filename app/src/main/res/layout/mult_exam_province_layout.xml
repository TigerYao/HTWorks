<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.66"
        android:background="#000000"/>

    <RelativeLayout
        android:id="@+id/show_province_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sel_text_tip"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center|left"
            android:text="请选择地区"
            />


        <ImageView
            android:id="@+id/sel_text_togg"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/shang"
            />
        <TextView
            android:id="@+id/sel_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/sel_text_togg"
            android:textSize="15sp"
            android:gravity="center|left"/>
    </RelativeLayout>

    <!--<View-->
        <!--android:id="@+id/div1"-->
        <!--android:layout_below="@+id/show_province_rl"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="@color/gray_divider"-->
        <!--/>-->

    <GridView
        android:id="@+id/gview"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="4"
        android:layout_below="@+id/show_province_rl"
        android:verticalSpacing="12dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        />

</RelativeLayout>
