<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/list_default_bg"
    android:id="@id/whole_content"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/type_img"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/course_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView style="@style/basetxt_title"
        android:text="@string/accountInformation"
        android:id="@+id/title_name_txt"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="45dp"
        android:textColor="#ff4a4a4a"
        android:textSize="16sp" />

    <ImageView

        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical|right"
        android:src="@mipmap/jiantou_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View android:layout_gravity="bottom" style="@style/comm_split_line"></View>
</FrameLayout>