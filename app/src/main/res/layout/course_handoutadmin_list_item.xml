<?xml version="1.0" encoding="utf-8"?>
<com.nalan.swipeitem.recyclerview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="44dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@id/whole_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_default_bg"
        android:minHeight="44dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chk_btn"
            style="@style/deleteCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="14dp"
            android:paddingTop="7dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/chk_btn"

            android:background="@drawable/list_default_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filesize_txt"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:drawableTop="@mipmap/course_file_pdf"
                android:drawablePadding="2dp"
                android:gravity="center_horizontal"
                android:text="1.7M"
                android:textColor="#ff4a4a4a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/title_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="2017年422联考：概括调整旅游发展供给侧方案的内容（北京）"
                android:textColor="#ff4a4a4a"
                android:textSize="14sp" />

            <View
                style="@style/comm_split_line"
                android:layout_gravity="bottom" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

   <!--     <Button
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_delete"
            android:text="删除缓存"
            android:textColor="#ffffff"
            android:textSize="16sp" />-->
        <TextView
            android:id="@+id/delete"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_gravity="center"
            android:drawablePadding="0dp"
            android:drawableTop="@mipmap/arena_down_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享课件"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</com.nalan.swipeitem.recyclerview.SwipeItemLayout>