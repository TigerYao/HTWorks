<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.huatu.handheld_huatu.view.TopActionBar
        android:id="@+id/common_list_view_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.huatu.handheld_huatu.view.TopActionBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_toolbar_height"
        android:orientation="horizontal"
        android:background="@color/gray004">
        <TextView
            android:id="@+id/search_purchased_course_cancel_btn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textColor="@color/gray010"
            android:textSize="16sp"/>
        <com.huatu.handheld_huatu.view.ClearEditText
            android:id="@+id/search_purchased_course_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/search_purchased_course_cancel_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_rectangle_e3e3e3"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/gray_999999"
            android:textSize="14sp"
            android:textColor="@color/gray_333333">
        </com.huatu.handheld_huatu.view.ClearEditText>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_search" />
    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/search_purchased_course_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/gray_333333"/>
    <com.huatu.handheld_huatu.view.XListView
        android:id="@+id/base_list_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#dfdfdf"
        android:dividerHeight="1px"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:listSelector="@null"
        android:scrollbars="none"
        android:scrollingCache="true">
    </com.huatu.handheld_huatu.view.XListView>
    <LinearLayout
        android:id="@+id/common_list_view_bottom_button_layout_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bottom_button_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">
    </LinearLayout>
</LinearLayout>
