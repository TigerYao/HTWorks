<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f7">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_top_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="@color/gray004">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_left_topbar"
            android:layout_width="48dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_left"
                android:layout_marginLeft="15dp"
                android:padding="3.0dp"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tv_title_titlebar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="修改密码"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blackF4"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_right_topbar"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确定"
                android:textColor="#999999"
                android:textSize="16dp"
                />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/rl_top_titlebar"
        android:background="@color/gray005" />


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_current_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_line1"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/text_current_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="当前密码"
            android:textColor="#666666"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edittext_current_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/text_current_password"
            android:background="#ffffff"
            android:hint="请输入当前密码"
            android:lines="1"
            android:textColor="#333333"
            android:textColorHint="#b8b8b8"
            android:textSize="14dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_current_password"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_current_password"
        android:background="#f1f1f1"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_new_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_current_password"
        android:background="#ffffff">

        <TextView
            android:id="@+id/text_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="新的密码"
            android:textColor="#666666"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edittext_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/text_new_password"
            android:background="#ffffff"
            android:hint="@string/passwordHint"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#333333"
            android:textColorHint="#b8b8b8"
            android:textSize="14dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/view_new_password"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_new_password"
        android:background="#dcdcdc" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_repead_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_new_password"
        android:background="#ffffff">

        <TextView
            android:id="@+id/text_repead_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="重复密码"
            android:textColor="#666666"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/edit_repead_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/text_repead_password"
            android:background="#ffffff"
            android:hint="@string/passwordHint"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="#333333"
            android:textColorHint="#b8b8b8"
            android:textSize="14dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_commit"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/rl_repead_password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/drawable_rectangle_438c44">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提 交"
            android:textColor="#ffffff"
            android:textSize="14dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>