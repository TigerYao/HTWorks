<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <com.huatu.widget.ArrowlineUpView
        android:id="@+id/arrow_up"
        android:layout_width="8dp"
        android:layout_height="5dp"
        android:layout_gravity="right"
        android:layout_marginRight="14dp" />
    <LinearLayout
        android:id="@+id/root"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/live_video_pp_more_bg"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5.0dip">
      <TextView
            android:id="@+id/pop_menu_upreport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_home_menu_middle_bg"
            android:drawableLeft="@drawable/live_video_more_share_btn"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="10.0dip"
            android:text="分享"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
       <!--<View-->
            <!--android:layout_width="120dp"-->
           <!--android:layout_height="1px"-->
            <!--android:background="#7d7d7d" />-->
        <TextView
        android:id="@+id/likeImage"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/item_home_menu_middle_bg"
        android:drawableLeft="@drawable/heart_off"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="10.0dip"
        android:paddingLeft="14dp"
        android:paddingTop="10.0dip"
        android:text="收藏"
        android:textColor="@color/onlive_action_text_selector"
        android:textSize="16.0sp" />

        <!--<View-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="1px"-->
            <!--android:background="#7d7d7d" />-->



        <TextView
           android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_home_menu_middle_bg"
            android:drawableLeft="@drawable/live_video_more_report_btn"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="10.0dip"
            android:text="反馈"
            android:textColor="@color/white"
            android:textSize="16.0sp" />


    </LinearLayout>
</LinearLayout>