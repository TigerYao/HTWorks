<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@drawable/share_ver_bg"
    android:paddingTop="@dimen/common_5dp">


    <ImageView
        android:id="@+id/iv_dialog_title"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="@dimen/common_8dp"
        android:paddingRight="@dimen/common_8dp"
        android:src="@drawable/gray_btn_bg"
        android:onClick="onClick"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imv_dialog_erweima"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@id/iv_dialog_title"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@mipmap/err_no_data" />

    <TextView
        android:id="@+id/group_id_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_dialog_erweima"
        android:layout_marginTop="@dimen/common_10dp"
        android:gravity="center_horizontal"
        android:textColor="#ff5d9aff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/course_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_id_tv"
        android:layout_margin="@dimen/common_15dp"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:text="西藏事业单位笔试《职业能力测验》"
        android:textColor="#ff4a4a4a"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_title_tv"
        android:layout_margin="@dimen/common_10dp"
        android:textColor="#ff9b9b9b"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/tv_describe"
        android:layout_margin="@dimen/common_10dp"
        android:gravity="center">

        <Button
            android:id="@+id/add_group_save_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_10dp"
            android:layout_weight="1.0"
            android:background="@drawable/red_btn_bg"
            android:paddingLeft="@dimen/common_20dp"
            android:paddingRight="@dimen/common_20dp"
            android:text="保存二维码"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textsize_16sp" />

        <Button
            android:id="@+id/add_group_jump_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_10dp"
            android:layout_weight="1.0"
            android:background="@drawable/red_btn_bg"
            android:paddingLeft="@dimen/common_20dp"
            android:paddingRight="@dimen/common_20dp"
            android:text="扫码加群"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textsize_16sp" />
    </LinearLayout>
</RelativeLayout>