<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="100dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/bg_rectangle_top_ffffff"></View>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:src="@mipmap/system_tip_sad_icon" />

    </FrameLayout>
    <View
        android:id="@+id/custom_dialog_divider"
        android:layout_width="250dp"
        android:layout_height="1px"

        android:visibility="gone" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_bottom_ffffff"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/custom_dialog_title_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#323232"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/custom_dialog_message_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="如果觉得我们做的还不错，请评分鼓励下吧~"
            android:textColor="#4a4a4a"
            android:textSize="16sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_dialog_cancel_btn"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"


                android:gravity="center"
                android:text="取消"
                android:textColor="#6D7172"
                android:textSize="15sp" />


            <View
                android:id="@+id/custom_dialog_btn_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:visibility="gone" />
            <com.huatu.handheld_huatu.ui.RoundbgTextView
                android:id="@+id/custom_dialog_confirm_btn"
                android:layout_width="105dp"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                app:qmui_backgroundColor="#FF3F47"
                app:qmui_radiusBottomLeft="19dp"
                app:qmui_radiusTopLeft="19dp"
                app:qmui_radiusBottomRight="19dp"
                app:qmui_radiusTopRight="19dp"
                android:text="去鼓励"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
