<?xml version="1.0" encoding="utf-8"?>
<!--问题描述Layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_question_des"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/arena_question_subject_layout_bg_color"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <!--问题类型-->
    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="错题重练"
        android:textColor="@color/arena_exam_subject_name_text"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!--有问题-->
    <ImageView
        android:id="@+id/iv_doubt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/ic_doubt_unchecked"
        android:visibility="gone" />

    <!--第几题-->
    <TextView
        android:id="@+id/tv_question_index"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="21"
        android:textColor="@color/common_style_text_color"
        android:textSize="14sp" />

    <!--共几题-->
    <TextView
        android:id="@+id/tv_question_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="/30"
        android:textColor="@color/arena_exam_subject_name_text"
        android:textSize="14sp" />
</LinearLayout>

