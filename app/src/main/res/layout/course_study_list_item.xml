<?xml version="1.0" encoding="utf-8"?>
<com.nalan.swipeitem.recyclerview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@id/whole_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_course_mine_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:text="2018江苏省面试特训专享版（20小时1对1学习）09班"
                android:textColor="#ff4a4a4a"
                android:textSize="16sp" />

            <com.huatu.handheld_huatu.ui.RoundbgTextView
                android:id="@+id/onlive_status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="2dp"
                android:text="今日\n直播"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                app:qmui_backgroundColor="#FF61AC"
                app:qmui_radiusBottomLeft="4dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp">


            <ImageView
                android:id="@+id/teacher_first_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"

                android:src="@mipmap/image11" />

            <ImageView
                android:id="@+id/teacher_second_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="64dp"
                android:src="@mipmap/image11" />

            <ImageView
                android:id="@+id/teacher_third_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="115dp"
                android:src="@mipmap/image11" />


            <TextView
                android:id="@+id/tv_item_course_mine_timelength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="165dp"
                android:singleLine="true"
                android:text="第3节 已直播345分56秒"
                android:textColor="#ff6c7172"
                android:textSize="12sp" />

            <com.huatu.widget.IncreaseProgressBar

                android:id="@+id/rush_sale_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"

                android:layout_marginBottom="16dp"
                android:layout_marginLeft="165dp"
                android:layout_marginRight="65dp"

                android:layout_toRightOf="@+id/left_layout"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_rush_sale_horizontal" />

            <TextView
                android:id="@+id/learn_tip_txt"
                style="@style/basetxt_title"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="8dp"
                android:text="已学25%"
                android:textColor="#ffed1c24"
                android:textSize="10sp"

                />

            <com.huatu.handheld_huatu.ui.MultTextView
                android:layout_marginLeft="4dp"
                android:id="@+id/techer_des_txt"
                android:layout_marginBottom="2dp"
                android:layout_gravity="bottom"
                android:layout_width="150dp"
                android:layout_height="24dp"/>

        </FrameLayout>

        <View
            android:id="@+id/one_split_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E4D8AA"></View>

        <TextView
            android:id="@+id/onebyone_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/zf_icon_a"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="1对1信息表"
            android:textColor="#E44E4E"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="1px">

        <Button
            android:id="@+id/stick"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_mark"
            android:text="置顶"
            android:textColor="#ffffff"
            android:textSize="16sp" />


        <Button
            android:id="@+id/delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

</com.nalan.swipeitem.recyclerview.SwipeItemLayout>