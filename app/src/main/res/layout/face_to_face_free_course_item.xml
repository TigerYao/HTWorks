<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="92dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/face_to_face_course_img"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_get_class" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" >
        <TextView
            android:id="@+id/face_to_face_course_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="15sp"
            android:textColor="@color/gray_333333"/>
        <TextView
            android:id="@+id/face_to_face_course_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/main_color"/>
        <TextView
            android:id="@+id/face_to_face_course_origin_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/face_to_face_course_price_tv"
            android:layout_marginLeft="5dp"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:textColor="@color/gray_999999"/>
    </RelativeLayout>
</LinearLayout>
