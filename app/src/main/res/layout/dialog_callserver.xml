<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="130dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_callserver" >

    <TextView
        android:id="@+id/tv_dialog_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/sys_server_phone"
        android:textColor="#5c942c"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_server_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_dialog_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="服务时间: 08:30-21:30"
        android:textColor="#666666"
        android:textSize="14sp" />
    <View 
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#66888888"
        android:layout_below="@id/tv_server_time"
        android:layout_marginTop="10dp"
        />
	<LinearLayout
	    android:layout_below="@id/v_line"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:orientation="horizontal"
	     >
	    <Button 
	        android:id="@+id/bt_call"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/transparent"
	        android:text="联系客服"
	        android:textColor="#5c942c"
	        android:textSize="18sp"
	        />
	    <View android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="#66888888"/>
	    <Button 
	        android:id="@+id/bt_cancel"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@color/transparent"
	        android:text="取消"
	        android:textColor="#888888"
	        android:textSize="18sp"
	        />
	</LinearLayout>
</RelativeLayout>