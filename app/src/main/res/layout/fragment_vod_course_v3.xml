<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.huatu.handheld_huatu.view.TopActionBar
        android:id="@+id/fragment_shopping_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="15dp">

            <GridView
                android:id="@+id/gv_examination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:layout_weight="2"
                android:fastScrollEnabled="false"
                android:listSelector="@null"
                android:numColumns="7"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="12dp"
                app:layout_paddingBottomPercent="3.39%w"
                app:layout_paddingLeftPercent="2.78%w"
                app:layout_paddingRightPercent="2.78%w"
                app:layout_paddingTopPercent="3.39%w" />

            <ImageView
                android:id="@+id/vodcourse_category_setting_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/live_ic_setting" />
        </LinearLayout>

        <View
            android:id="@+id/vodcourse_child_category_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:id="@+id/vodcourse_child_category_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <GridView
                android:id="@+id/gv_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:fastScrollEnabled="false"
                android:listSelector="@null"
                android:numColumns="7"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="12dp"
                app:layout_paddingBottomPercent="3.39%w"
                app:layout_paddingLeftPercent="2.78%w"
                app:layout_paddingRightPercent="2.78%w"
                app:layout_paddingTopPercent="3.39%w" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/arena_exam_common_text_bg" />

    <com.huatu.handheld_huatu.view.XListView
        android:id="@+id/fg_vc_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/gray_divider"
        android:dividerHeight="1px" />
</com.zhy.android.percent.support.PercentLinearLayout>
