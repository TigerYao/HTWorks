<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="105dp"
            android:textColor="@color/blackF4"/>
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_protocols"
            android:layout_width="36dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_protocols"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="60dp" />
        <com.huatu.handheld_huatu.view.PileLayout
            android:id="@+id/pile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:visibility="gone"
            app:PileLayout_pileWidth="12dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff3f3f3"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
   <com.huatu.handheld_huatu.view.ListViewForScroll
       android:id="@+id/lv_order_course_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginRight="15dp"
       android:layout_marginLeft="15dp"
       android:listSelector="@android:color/transparent"
       android:divider="#FFF3F3F3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#fff3f3f3"
        />
    <TextView
        android:id="@+id/tv_total_course"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="right|center_vertical"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:visibility="gone"
        android:textColor="@color/blackF4"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff3f3f3"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackF4"
            android:textSize="12dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_pay_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_pay_type"
            android:textColor="@color/blackF4"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/tv_to_logistic"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="14dp"
            android:textColor="#6D7172"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:text="查看物流"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:background="@drawable/unselect_feedback"/>
    <TextView
        android:id="@+id/tv_delete_order"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textSize="14dp"
        android:textColor="#6D7172"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:text="删除订单"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:background="@drawable/unselect_feedback"/>
       <TextView
        android:id="@+id/tv_change_order_status"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textSize="14dp"
        android:textColor="#6D7172"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:background="@drawable/unselect_feedback"/>
</LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF3F3F3"/>
</LinearLayout>