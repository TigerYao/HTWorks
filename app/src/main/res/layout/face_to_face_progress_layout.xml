<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="#F1F1F1"
    android:paddingLeft="38dp"
    android:paddingRight="38dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/face_to_face_apply_tv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_circle_46bb8c"
        android:gravity="center"
        android:text="报名"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:id="@+id/face_to_face_apply_line_1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#46bb8c"/>
        <View
            android:id="@+id/face_to_face_apply_view"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_circle_46bb8c"/>
        <View
            android:id="@+id/face_to_face_apply_line_2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#dddddd"/>
    </LinearLayout>
    <TextView
        android:id="@+id/face_to_face_verify_tv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_circle_dddddd"
        android:gravity="center"
        android:text="审核"
        android:textColor="@color/gray_333333"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:id="@+id/face_to_face_verify_line_1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#dddddd"/>
        <View
            android:id="@+id/face_to_face_verify_view"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_circle_dddddd"/>
        <View
            android:id="@+id/face_to_face_verify_line_2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#dddddd"/>
    </LinearLayout>
    <TextView
        android:id="@+id/face_to_face_pass_tv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_circle_dddddd"
        android:gravity="center"
        android:text="上课"
        android:textColor="@color/gray_999999"
        android:textSize="14sp" />
</LinearLayout>
