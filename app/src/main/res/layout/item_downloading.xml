<?xml version="1.0" encoding="utf-8"?><!-- height:112dp -->
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="24.44%w">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            app:layout_widthPercent="12.5%w">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_down_unselect" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ll_select"
            app:layout_heightPercent="20%w"
            app:layout_widthPercent="35.55%w">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="13.88%h"
                app:layout_marginRightPercent="16.66%h" />

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A0000000"
                app:layout_marginLeftPercent="13.88%h"
                app:layout_marginRightPercent="16.66%h">

                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/live_download"
                    app:layout_heightPercent="24.26%w"
                    app:layout_marginLeftPercent="18.87%w"
                    app:layout_widthPercent="18.87%w" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/iv_state"
                    android:gravity="center"
                    android:text="下载中"
                    android:textColor="@color/white"
                    app:layout_marginLeftPercent="7.55%w"
                    app:layout_textSizePercent="12.26%w" />

            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!-- width:192dp -->
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/rl_img">

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:textColor="#323232"
                android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssss"
                app:layout_marginRightPercent="11.36%h"
                app:layout_marginTopPercent="14.59%h"
                app:layout_textSizePercent="15.9%h" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_live_title"
                android:background="@drawable/bt_download_gray"
                android:max="100"
                android:progress="10"
                android:progressDrawable="@drawable/progress_downloading"
                app:layout_heightPercent="2.84%h"
                app:layout_marginTopPercent="8.81%h"
                app:layout_widthPercent="181.59%h" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressBar"
                android:text="143kb/s"
                android:textColor="#9d9d9d"
                app:layout_marginTopPercent="8.09%h"
                app:layout_textSizePercent="11.36%h" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/progressBar"
                android:layout_below="@+id/progressBar"
                android:text="0%"
                android:textColor="#9d9d9d"
                app:layout_marginTopPercent="8.09%h"
                app:layout_textSizePercent="11.36%h"
                />

        </com.zhy.android.percent.support.PercentRelativeLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>