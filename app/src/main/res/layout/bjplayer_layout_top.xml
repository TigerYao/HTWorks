<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    android:background="@drawable/video_play_title_bg">
    <ImageView
        android:id="@+id/rl_back"
        android:layout_width="@dimen/common_dimens_50dp"
        android:layout_height="@dimen/common_dimens_50dp"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:src="@drawable/video_play_title_back" />
    <TextView
        android:id="@+id/textView_TitleBar_Info"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/danmu_switch_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:tag="1"
        android:layout_marginTop="2dp"
        android:src="@drawable/play_danmu_swith_selector" />
    <ImageView
        android:id="@+id/iv_titlebt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/common_5dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@drawable/video_play_title_more_land" />
</com.zhy.android.percent.support.PercentLinearLayout>
