<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/three_layer_up_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/three_layer_title"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/common_5dp"
        android:layout_toLeftOf="@id/three_layer_up_down"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/three_layer_video_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/three_layer_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="video"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/three_layer_course_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/three_layer_title"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:text="course"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>