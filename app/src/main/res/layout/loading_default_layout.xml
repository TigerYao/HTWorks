<?xml version="1.0" encoding="utf-8"?>
<com.huatu.handheld_huatu.ui.CommloadingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xi_layout_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingTop="80dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--   <ImageView
               android:id="@+id/xi_loading_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"  />-->

        <com.huatu.Indicator.AVLoadingIndicatorView
            android:id="@+id/xi_loading_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicator="BallPulse"
            app:indicator_color="#cccccc" />

        <ImageView
            android:id="@+id/xi_hite_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/down_no_num"
            android:visibility="gone" />
    </FrameLayout>


    <TextView
        android:id="@+id/xi_hite_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/xs_loading_text"
        android:textColor="#9B9B9B"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/xi_tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"

        android:gravity="center"
        android:textColor="#9B9B9B"
        android:textSize="15sp" />
</com.huatu.handheld_huatu.ui.CommloadingView>
