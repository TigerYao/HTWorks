<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/tv_list_course_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="70dp"
    android:maxLines="2"
    android:ellipsize="end"
    android:textSize="14dp"
    android:textColor="#000000"
    />
    <TextView
        android:id="@+id/tv_list_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/blackF4"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/tv_list_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/black250"
        android:textStyle="bold"
        android:layout_below="@id/tv_list_real_price"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/tv_list_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:textColor="#6D7172"
        android:layout_below="@id/tv_list_real_price"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/tv_list_course_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12dp"
        android:textColor="@color/blackF4"
        android:layout_alignBottom="@id/tv_list_course_time" />
</RelativeLayout>