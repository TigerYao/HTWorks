<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/splash_tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/netschool_20dp"
        android:layout_marginRight="@dimen/netschool_20dp"
        android:background="@drawable/splash_tv_bg"
        android:drawableRight="@mipmap/splash_tv_jump"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:text="3s 跳转"
        android:visibility="gone" />
</RelativeLayout>