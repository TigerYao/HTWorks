<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="12dp"
            android:background="#d1d1d1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择考试"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_paddingLeftPercent="3.27%w"
            app:layout_textSizePercent="3.88%w" />

        <GridView
            android:id="@+id/gv_examination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="false"
            android:listSelector="@null"
            android:numColumns="4"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12dp"
            app:layout_paddingBottomPercent="3.39%w"
            app:layout_paddingLeftPercent="2.78%w"
            app:layout_paddingRightPercent="2.78%w"
            app:layout_paddingTopPercent="3.39%w" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#d1d1d1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择科目"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_paddingLeftPercent="3.27%w"
            app:layout_textSizePercent="3.88%w" />

        <GridView
            android:id="@+id/gv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="false"
            android:listSelector="@null"
            android:numColumns="4"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12dp"
            app:layout_paddingBottomPercent="3.39%w"
            app:layout_paddingLeftPercent="2.78%w"
            app:layout_paddingRightPercent="2.78%w"
            app:layout_paddingTopPercent="3.39%w" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="#d1d1d1" />

        <View
            android:id="@+id/v_blank_below_button"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:visibility="gone"
            app:layout_heightPercent="10.28%w" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/bg_uniform"
            android:orientation="horizontal"
            app:layout_heightPercent="13.11%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_qingchushaixuan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f2f2f2"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_qingchushaixuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空筛选"
                    android:textColor="#666666"
                    app:layout_textSizePercent="36.84%h" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/ll_queding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f2f2f2"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_queding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textColor="@color/ht_txt_style_color"
                    app:layout_textSizePercent="36.84%h" />

            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>