<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#bf000000"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <FrameLayout
        android:layout_gravity="center"
        android:paddingBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <FrameLayout
             android:id="@+id/content_layout"
            android:layout_marginTop="53dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/white_round_eight_bg"
            android:layout_width="398dp"
            android:layout_height="200dp">

          <TextView
               android:id="@+id/tip_txt"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:gravity="center"
              android:textStyle="bold"
              android:text="接下来做5道练习题\r\n 巩固下课堂学习的知识"
              android:layout_gravity="center"
              android:layout_width="match_parent"
              android:layout_height="50dp" />

            <com.huatu.handheld_huatu.ui.RoundbgTextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/start_btn"
                android:layout_marginTop="36dp"
                android:gravity="center"
                android:text="开始练习"
                android:textColor="#ffffffff"
                android:layout_gravity="bottom"
                app:qmui_backgroundColor="#EC74A0"
                app:qmui_radiusBottomLeft="9dp"
                app:qmui_radiusBottomRight="9dp"
                android:layout_width="match_parent"
                android:layout_height="44dp" />


        </FrameLayout>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/play_afterclass_imgtip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:paddingLeft="200dp"
            android:layout_marginTop="13dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/play_afterclass_txttip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <ImageView
        android:id="@+id/close_btn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/course_evalute_close_icon" />


    <TextView
        android:id="@+id/show_next_btn"
        android:layout_marginTop="10dp"
        style="@style/basetxt_title_small"
        android:layout_gravity="right"
        android:padding="10dp"
        android:text="@string/play_next_tip"
        android:textColor="#9B9B9B" />
</FrameLayout>