<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="@color/white"
        >


        <RelativeLayout
            android:id="@+id/rl_left_top_bar"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_left"
                android:padding="1.0dp"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/tv_title_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程"
            android:textColor="@color/redF3"
            android:textStyle="bold"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_title_essay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_title_course"
            android:layout_marginLeft="40dp"
            android:text="申论"
            android:textStyle="bold"
            android:textColor="@color/blackF4"
            android:textSize="18dp" />
    <TextView
        android:id="@+id/tv_title_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_title_essay"
        android:layout_marginLeft="40dp"
        android:text="面授"
        android:textStyle="bold"
        android:textColor="@color/blackF4"
        android:textSize="18dp" />
</RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/rl_top_title_bar"
        android:background="@color/gray005"/>
    <ImageView
        android:id="@+id/iv_tab"
        android:layout_width="30dp"
        android:layout_height="6dp"
        android:layout_below="@id/line1"
        android:layout_marginTop="22dp"
        android:visibility="visible"
        android:background="@color/red250" />
    <LinearLayout
        android:id="@+id/ll_top_order_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_noPay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@color/blackF4"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_alreadyPay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已支付"
            android:textColor="@color/blackF4"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blackF4"
            android:text="已取消"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blackF4"
            android:text="待分享"
            android:visibility="gone"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/ll_top_order_bar"
        android:background="@color/gray005"/>



