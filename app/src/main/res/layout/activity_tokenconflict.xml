    <!-- width:260dp -->
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical"
        app:layout_widthPercent="77.22%w">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/bg_rectangle_top_ffffff"></View>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/system_tip_sad_icon" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_bottom_ffffff"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="0dp"
                android:gravity="center"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/dataMock"
                android:textColor="@color/blackF4"
                android:textSize="15sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.huatu.handheld_huatu.ui.RoundbgTextView
                    android:id="@+id/custom_dialog_cancel_btn"
                    android:layout_width="105dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:qmui_backgroundColor="#F3F3F3"
                    app:qmui_radiusBottomLeft="19dp"
                    app:qmui_radiusTopLeft="19dp"
                    app:qmui_radiusBottomRight="19dp"
                    app:qmui_radiusTopRight="19dp"
                    android:gravity="center"
                    android:text="游客模式"
                    android:textColor="#6D7172"
                    android:textSize="16sp" />

                <com.huatu.handheld_huatu.ui.RoundbgTextView
                    android:id="@+id/tv_ok"
                    android:layout_width="105dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    app:qmui_backgroundColor="#FF3F47"
                    app:qmui_radiusBottomLeft="19dp"
                    app:qmui_radiusTopLeft="19dp"
                    app:qmui_radiusBottomRight="19dp"
                    app:qmui_radiusTopRight="19dp"
                    android:text="重新登录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

