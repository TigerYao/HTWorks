<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_network_tip"
    android:gravity="center_vertical"
    android:layout_gravity="top|center_horizontal"
    android:orientation="horizontal"
    android:paddingLeft="9dp"
    android:paddingRight="@dimen/common_dimens_30dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_dimens_30dp"
        android:src="@mipmap/video_network_toast_tip_icon" />

    <TextView
        android:id="@+id/xi_toast_default_text"
        android:paddingLeft="@dimen/common_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您现在网络信号不太好，请切换网络试试～"
        android:textColor="#ffffffff"
        android:textSize="12sp" />
</LinearLayout>