<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1">

    <RelativeLayout
        android:id="@+id/rl_top_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_left_topbar"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:padding="3dp"
                android:src="@drawable/icon_arrow_left" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号信息"
            android:textColor="@color/blackF4"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/rl_top_titlebar"
        android:background="@color/gray005" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/view_line1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_image_info"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="头像"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/image111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/jiantou_right" />

        <ImageView
            android:id="@+id/image_info"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/image111"
            android:src="@mipmap/image11" />
    </RelativeLayout>

    <View
        android:id="@+id/view_image_info"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_image_info" />

    <RelativeLayout
        android:id="@+id/rl_change_account"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_image_info"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="修改昵称"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/jiantou_right" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_change_account"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/rl_change_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_line2"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="修改密码"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/jiantou_right" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_change_password"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/rl_change_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_line3"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="手机号"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/text_info_phonenum_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/jiantou_right" />

        <TextView
            android:id="@+id/text_info_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/text_info_phonenum_arrow"
            android:text=""
            android:textColor="#666666"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_change_phone"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:id="@+id/rl_change_password1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_line4"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="账号信息"
            android:textColor="#333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_image_info2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_change_password1" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view_image_info2"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="我的收货地址"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/jiantou_right" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_address"
        android:layout_marginTop="@dimen/netschool_20dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/text_exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#333333"
            android:textSize="15sp" />
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>