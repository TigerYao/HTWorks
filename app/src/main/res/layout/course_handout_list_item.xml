<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:id="@id/whole_content"
    android:background="@drawable/list_default_bg"
    android:layout_height="70dp">

   <TextView
       android:layout_marginLeft="15dp"
       android:drawableTop="@mipmap/course_file_pdf"
       android:drawablePadding="2dp"
       android:textColor="#ff4a4a4a"
       android:id="@+id/filesize_txt"
       android:gravity="center_horizontal"
       android:textSize="10sp"
       android:layout_gravity="center_vertical"
       android:text="1.7M"
       android:layout_width="30dp"
       android:layout_height="40dp" />
   <TextView
        android:id="@+id/title_name_txt"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="2017年422联考：概括调整旅游发展供给侧方案的内容（北京）"
        android:textColor="#ff4a4a4a"
        android:textSize="14sp"
        />
    <com.huatu.handheld_huatu.ui.DownBtnLayout
        android:layout_marginRight="5dp"
        android:layout_width="45dp"
        android:layout_gravity="right|center_vertical"
        android:id="@+id/down_status_layout"
        android:layout_height="45dp">
        <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/loading_progress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateDrawable="@drawable/down_loading_progress" />


        <ImageView

            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/course_start_down_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.huatu.handheld_huatu.ui.DownBtnLayout>
<View android:layout_gravity="bottom" style="@style/comm_split_line"/>
</FrameLayout>