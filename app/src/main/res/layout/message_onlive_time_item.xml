<?xml version="1.0" encoding="utf-8"?>
<com.nalan.swipeitem.recyclerview.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/swipe_item"
    android:background="@color/white"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/list_default_bg"
    android:id="@id/whole_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:id="@+id/hasRead_view"
            android:background="@drawable/red_oval_bg"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content"
            android:text="18:30您有一节直播课，不要迟到哦～"
            android:textColor="#ff000000"
            android:textSize="16sp"
            />

    </FrameLayout>


    <FrameLayout
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
         <ImageView
             android:id="@+id/cover_img"
             android:background="@mipmap/load_default"
             android:scaleType="fitXY"
             android:layout_width="140dp"
             android:layout_height="80dp" />
        <TextView
            android:id="@+id/content_txt"
            android:layout_marginLeft="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="【2018年公考面试】结构化 面试理论课结构化面试理论课"
            android:textColor="#ff000000"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/techer_des_txt"
            android:layout_marginLeft="150dp"
            android:layout_gravity="bottom"
            android:layout_width="96dp"
            android:layout_height="17dp"
            android:textColor="#ff4a4a4a"
            android:textSize="12sp"
            />


        
    </FrameLayout>

    <TextView
        android:id="@+id/tv_time_tip"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刚刚"
        android:textColor="#ff979797"
        android:textSize="12sp"
        />
</LinearLayout>

<LinearLayout
android:id="@+id/lll_delete"
android:layout_width="100dp"
android:layout_height="match_parent">
<TextView
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:text="删除"
    android:gravity="center"
    android:textColor="@color/white"
    android:textSize="16dp"
    android:background="@color/redF3"/>
</LinearLayout>
    </com.nalan.swipeitem.recyclerview.SwipeItemLayout>