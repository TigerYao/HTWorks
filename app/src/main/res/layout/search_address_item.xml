<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_shouhuoren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="15dp"
            android:maxLength="12"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_shouhuoren"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/tv_shouhuoren"
            android:textColor="#333333"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_marginTop="13dp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#666666"
            android:textSize="14dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line_lesson_course"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl1"
        android:background="#dcdcdc"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/line_lesson_course"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/iv_moren"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/zf_icon_bb" />

        <TextView
            android:id="@+id/tv_moren"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@+id/iv_moren"
            android:text="设为默认地址"
            android:textColor="#333333"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/bt_shanchu"
            android:layout_width="57dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bianjikuang"
            android:text="删除"
            android:textColor="#333333"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/bt_bianji"
            android:layout_width="57dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/bt_shanchu"
            android:background="@drawable/bianjikuang"
            android:text="编辑"
            android:textColor="#333333"
            android:textSize="12dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/line_lesson_course2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl2"
        android:background="#bcbcbc" />

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/line_lesson_course2"
        android:background="#f1f1f1">

    </RelativeLayout>
</RelativeLayout>