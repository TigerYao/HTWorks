    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="84dp">
        <ImageView
            android:id="@+id/iv_message_type"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/textview_oval_border"
            android:gravity="center"
            android:padding="1dp"
            android:text="1"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textSize="9dp" />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_toRightOf="@id/iv_message_type"
            android:layout_alignTop="@id/iv_message_type"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black250"
            android:textSize="12dp"
            android:layout_alignTop="@id/iv_message_type"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black250"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:layout_alignBottom="@+id/iv_message_type"
            android:layout_alignLeft="@id/tv_type"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F3F3"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
