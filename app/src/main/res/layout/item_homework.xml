<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mRlHomeworkClass"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <View
            android:layout_marginTop="10dp"
            android:id="@+id/mViewLine1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/correct_bg" />
        <ImageView
            android:id="@+id/mIvFold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/mViewLine1"
            android:layout_marginRight="12dp"/>
        <TextView
            android:id="@+id/mTvTimes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/mViewLine1"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/mIvFold"
            android:textColor="@color/grayC4"
            android:textSize="12dp"
            tools:text="2次" />
        <TextView
            android:id="@+id/mTvClassName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/common_10dp"
            android:layout_below="@+id/mViewLine1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/arena_exam_subject_name_text_night"
            android:textSize="16dp"
            android:layout_toLeftOf="@+id/mTvTimes"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="2019国考系统提分班02期003班" />

    </RelativeLayout>

    <View
        android:id="@+id/mViewLine2"
        android:layout_below="@+id/mRlTitle1"
        android:background="@color/correct_bg"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="13dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/mRlCourseDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRlHomeworkClass">

        <RelativeLayout
            android:id="@+id/mRlTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mIvCircle"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/arena_circle_ff3f47" />

            <TextView
                android:id="@+id/mTvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="31dp"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="3" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mTvTitle"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mRlTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="55dp"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:text="2019国考系统提分班02期003班" />

        <TextView
            android:id="@+id/mTvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mTvTitle"
            android:layout_alignLeft="@+id/mTvTitle"
            android:layout_marginRight="55dp"
            android:layout_marginTop="@dimen/common_10dp"
            android:singleLine="true"
            android:textColor="@color/arena_exam_subject_name_text"
            android:textSize="12sp"
            tools:text="回放 5月2日 19:00-21:00" />

        <RelativeLayout
            android:id="@+id/mRlTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mTvDate"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="22dp">

            <ImageView
                android:id="@+id/mIvExercises"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/course_after_tag_icon" />

            <TextView
                android:id="@+id/mTvExercises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mIvExercises"
                android:layout_marginLeft="@dimen/common_5dp"
                android:layout_marginRight="55dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="课后作业" />

            <TextView
                android:id="@+id/mTvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/arena_exam_subject_name_text"
                android:textSize="@dimen/check_12sp"
                tools:text="未完成" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
