<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">

    <com.huatu.handheld_huatu.business.ztk_zhibo.refresh.RefreshListView
        android:id="@+id/refreshlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:divider="#dcdcdc"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        app:layout_heightPercent="12.2%w">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_paixu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="综合排序"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_textSizePercent="31.82%h" />

            <ImageView
                android:id="@+id/pxImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_paixu"
                android:background="@drawable/x"
                app:layout_heightPercent="10.23%h"
                app:layout_marginLeftPercent="11.36%h"
                app:layout_widthPercent="15.91%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="#666666"
            app:layout_heightPercent="6.1%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="筛选"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_textSizePercent="31.82%h" />

            <ImageView
                android:id="@+id/pxImg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_shaixuan"
                android:background="@drawable/x"
                app:layout_heightPercent="10.23%h"
                app:layout_marginLeftPercent="11.36%h"
                app:layout_widthPercent="15.91%h" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/shauxinnodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_logistics_no"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/down_no_num"
            app:layout_heightPercent="23.6%w"
            app:layout_widthPercent="25%w" />

        <TextView
            android:id="@+id/tv_logistics_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logistics_no"
            android:layout_centerHorizontal="true"
            android:text="暂无您筛选的课程"
            android:textColor="#999999"
            app:layout_marginTopPercent="4.1%w"
            app:layout_textSizePercent="3.8%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_kaoshi"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="#ffffff"
            app:layout_heightPercent="25.2%w">

            <TextView
                android:id="@+id/tv_kaoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="考试类型"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginTopPercent="4.1%w"
                app:layout_textSizePercent="3.8%w" />

            <Button
                android:id="@+id/bt_quanbu"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/lvbj"
                android:text="全部"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginBottomPercent="4.1%w"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_gongwu"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_quanbu"
                android:background="@drawable/huibj"
                android:text="公务员"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_shiye"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_gongwu"
                android:background="@drawable/huibj"
                android:text="事业单位"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_other"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_shiye"
                android:background="@drawable/huibj"
                android:text="其他"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <View
                android:id="@+id/xian"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_riqi"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_below="@+id/rl_kaoshi"
            android:background="#ffffff"
            app:layout_heightPercent="25.2%w">

            <TextView
                android:id="@+id/tv_riqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="直播日期"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginTopPercent="4.1%w"
                app:layout_textSizePercent="3.8%w" />

            <Button
                android:id="@+id/bt_quanbu_riqi"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/lvbj"
                android:text="全部"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginBottomPercent="4.1%w"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_weikaishi"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu_riqi"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_quanbu_riqi"
                android:background="@drawable/huibj"
                android:text="未开始"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_yikaishi"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu_riqi"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_weikaishi"
                android:background="@drawable/huibj"
                android:text="已开始"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_jingcai"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu_riqi"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_yikaishi"
                android:background="@drawable/huibj"
                android:text="精彩回顾"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <View
                android:id="@+id/xian3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_jiage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/rl_riqi"
            android:background="#ffffff"
            app:layout_heightPercent="38.8%w">

            <TextView
                android:id="@+id/tv_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="价格"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginTopPercent="4.1%w"
                app:layout_textSizePercent="3.8%w" />

            <Button
                android:id="@+id/bt_jiage3"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/huibj"
                android:text="100-999元"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginBottomPercent="4.1%w"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_jiage4"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_jiage3"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_jiage3"
                android:background="@drawable/huibj"
                android:text="1000元以上"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_quanbu_jiage"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_above="@+id/bt_jiage3"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/lvbj"
                android:text="全部"
                android:textColor="#ffffff"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginBottomPercent="3.6%w"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_mianfei"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu_jiage"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_quanbu_jiage"
                android:background="@drawable/huibj"
                android:text="免费"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_jiage1"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu_jiage"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_mianfei"
                android:background="@drawable/huibj"
                android:text="1-9元"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <Button
                android:id="@+id/bt_jiage2"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/bt_quanbu_jiage"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bt_jiage1"
                android:background="@drawable/huibj"
                android:text="10-99元"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_heightPercent="8.3%w"
                app:layout_marginLeftPercent="2.7%w"
                app:layout_textSizePercent="3.3%w"
                app:layout_widthPercent="19.4%w" />

            <View
                android:id="@+id/xian2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_below="@+id/rl_jiage"
            android:background="#ffffff"
            app:layout_heightPercent="10.8%w">

            <Button
                android:id="@+id/bt_queding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:text="确定"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_textSizePercent="3.8%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:id="@+id/view_shaixuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#a8000000" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rl_paixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_zonghe"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_zonghe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="综合排序"
                android:textColor="#438c44"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_shangjia"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rl_zonghe"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_shangjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="上架时间"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                android:visibility="gone"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian6"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_gaotodi"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rl_shangjia"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_gaotodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="价格由高到低"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                android:visibility="gone"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian7"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_ditogao"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rl_gaotodi"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_ditogao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="价格由低到高"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                android:visibility="gone"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian8"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:id="@+id/view_paixu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#88888888" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>