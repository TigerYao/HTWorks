<?xml version="1.0" encoding="utf-8"?>
<com.huatu.handheld_huatu.ui.CommloadingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xi_layout_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingTop="110dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--   <ImageView
               android:id="@+id/xi_loading_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"  />-->

        <com.huatu.Indicator.AVLoadingIndicatorView
            android:id="@+id/xi_loading_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicator="BallPulse"
            app:indicator_color="#cccccc" />

        <ImageView
            android:id="@+id/xi_hite_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/down_no_num"
            android:visibility="gone" />
    </FrameLayout>


    <TextView
        android:id="@+id/xi_hite_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/xs_loading_text"
        android:textColor="#4A4A4A"
        android:textSize="15sp" />

    <com.huatu.handheld_huatu.ui.RoundbgTextView
        android:id="@+id/xi_tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="重新加载"
        android:visibility="gone"
        android:drawablePadding="8dp"
        android:drawableLeft="@mipmap/retry_refresh_icon"
        app:qmui_backgroundColor="#FF3F47"
        app:qmui_radiusBottomLeft="22dp"
        app:qmui_radiusTopLeft="22dp"
        app:qmui_radiusBottomRight="22dp"
        app:qmui_radiusTopRight="22dp"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:gravity="center"  />
</com.huatu.handheld_huatu.ui.CommloadingView>
