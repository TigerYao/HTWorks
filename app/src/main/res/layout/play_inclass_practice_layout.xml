<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#bf000000"
    android:clickable="true"
    android:clipChildren="false"
    android:layout_height="match_parent">
   <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
   </android.support.v4.view.ViewPager>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/loadingBar"
        style="@style/icon_loading_small"/>

    <TextView
        android:id="@+id/top_tip_txt"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="做道题来测试下吧~"
        android:textColor="#ffffe175"
        android:textSize="12sp"
        />
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随堂练习"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/cancel_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不想做，跳过"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/afc_30dp"
        android:layout_gravity="right"
        android:textColor="#ff9b9b9b"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/submit_btn"
        android:layout_gravity="bottom"
        android:background="@drawable/play_inclass_submit_bg"
        android:gravity="center"
        android:text="提交答案"
        android:visibility="gone"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
</FrameLayout>