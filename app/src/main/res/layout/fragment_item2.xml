<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">

    <com.huatu.handheld_huatu.business.ztk_zhibo.refresh.RefreshListView
        android:id="@+id/refreshlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl"
        android:divider="@color/cut_line"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />
    <com.huatu.handheld_huatu.business.ztk_zhibo.play.RefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl"
        android:background="#F6F6F6">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/paixunodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_paixunodata"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:src="@drawable/down_no_num"
                app:layout_heightPercent="23.6%w"
                app:layout_widthPercent="25%w" />

            <TextView
                android:id="@+id/tv_paixunodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_paixunodata"
                android:layout_centerHorizontal="true"
                android:text="没有找到相关课程"
                android:textColor="#999999"
                app:layout_marginTopPercent="4.1%w"
                app:layout_textSizePercent="3.8%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.huatu.handheld_huatu.business.ztk_zhibo.play.RefreshLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/nonetwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl"
        android:gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iviv_paixunodata"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/down_no_num"
            app:layout_heightPercent="23.6%w"
            app:layout_widthPercent="25%w" />

        <TextView
            android:id="@+id/tvtv_paixunodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_paixunodata"
            android:layout_centerHorizontal="true"
            android:text="点击屏幕，重新加载"
            android:textColor="#999999"
            app:layout_marginTopPercent="4.1%w"
            app:layout_textSizePercent="3.8%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_heightPercent="12.2%w">

        <TextView
            android:id="@id/tv_paixu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="全部课程"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_marginLeftPercent="3.3%w"
            app:layout_textSizePercent="31.82%h" />

        <ImageView
            android:id="@+id/pxImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_paixu"
            android:background="@drawable/x"
            app:layout_heightPercent="10.23%h"
            app:layout_marginLeftPercent="11.36%h"
            app:layout_widthPercent="15.91%h" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/rl_paixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_zonghe"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_zonghe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="全部课程"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian5"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_shangjia"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rl_zonghe"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_shangjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="未开始课程"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                android:visibility="gone"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian6"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_gaotodi"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rl_shangjia"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_gaotodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="进行中课程"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                android:visibility="gone"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian7"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_ditogao"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/rl_gaotodi"
            android:background="#ffffff"
            app:layout_heightPercent="12.2%w">

            <TextView
                android:id="@+id/tv_ditogao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="已结束课程"
                android:textColor="#333333"
                android:textSize="14sp"
                app:layout_marginLeftPercent="3.3%w"
                app:layout_textSizePercent="3.8%w" />

            <ImageView
                android:id="@+id/paixuxuanze4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/shop_sort"
                android:visibility="gone"
                app:layout_heightPercent="4.1%w"
                app:layout_marginRightPercent="5%w"
                app:layout_widthPercent="5.5%w" />

            <View
                android:id="@+id/xian8"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#cecece">

            </View>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <View
            android:id="@+id/view_paixu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#88888888" />
    </com.zhy.android.percent.support.PercentLinearLayout>


    <ImageView
        android:id="@+id/ycxianshi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ycxianshi"
        android:visibility="gone"
        app:layout_heightPercent="100%h"
        app:layout_widthPercent="100%w" />

    <View
        android:id="@+id/view_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88888888"
        android:visibility="gone" />
</com.zhy.android.percent.support.PercentRelativeLayout>