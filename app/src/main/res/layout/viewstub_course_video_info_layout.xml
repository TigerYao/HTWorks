<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/play_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/v_play"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/play_btn_playing"
        android:drawableRight="@drawable/videoicon"
        android:drawablePadding="@dimen/common_5dp"
        android:gravity="center"
        android:paddingLeft="@dimen/common_8dp"
        android:paddingRight="@dimen/common_8dp"
        android:text="课程介绍"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/start_free_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/v_play"
        android:drawablePadding="@dimen/common_10dp"
        android:gravity="center"
        android:text="免费试听"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mobile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_10dp"
        android:background="@drawable/bg_shape_send_black"
        android:gravity="center"
        android:text="提示：即将消耗19M手机流量"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:visibility="gone" />
</LinearLayout>
