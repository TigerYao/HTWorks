<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/upload_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/upload_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:src="@mipmap/essay_feedback_add"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/upload_iv_del"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/essay_fd_del"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/upload_tv_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="重新上传"
        android:padding="5dp"
        android:textColor="@color/common_style_text_color"
        android:textSize="11dp"
        />

</RelativeLayout>


