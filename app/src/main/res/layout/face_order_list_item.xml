<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/order_code_title"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="订单号：2018050809261809036804"
            android:textColor="#ff4a4a4a"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/pay_result_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:layout_gravity="right|center_vertical"
            android:textColor="#ffff3f47"
            android:textSize="12sp"
            />

    </FrameLayout>
  <View
      android:background="#f3f3f3"
      android:layout_width="match_parent"
      android:layout_height="0.6dp"></View>

    <TextView
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:id="@+id/title_name_txt"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="红领培优A笔试全程营 - 合肥市学习中心红领培优A笔试全程营 - 合肥市学习中心"
        android:textColor="#ff000000"
        android:textSize="14sp"
        />
    <View
        android:background="#f3f3f3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"></View>
    <FrameLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="实付款"
            android:layout_gravity="center_vertical"
            android:textColor="#ff4a4a4a"
            android:textSize="12sp"
            />
        <TextView
            android:layout_marginLeft="62dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pay_money_txt"
            android:layout_gravity="center_vertical"
            android:text="￥42888.00"
            android:textColor="#ff4a4a4a"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_call_server"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="14dp"

                android:textColor="#6D7172"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:text="联系客服"

                android:background="@drawable/unselect_feedback"/>
            <TextView
                android:id="@+id/pay_action_txt"
                android:layout_width="80dp"
                android:layout_marginLeft="10dp"
                android:layout_height="32dp"
                android:text="我要付款"
                android:gravity="center"
                android:layout_gravity="right|center_vertical"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />


        </LinearLayout>

    </FrameLayout>
</LinearLayout>