<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_simulation_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_simulation_contest_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/simulation_title"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/titlebar_15dp"
        android:paddingTop="3dp"
        android:src="@mipmap/item_simulation_contest_icon" />

    <TextView
        android:id="@+id/simulation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/netschool_20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/titlebar_15dp"
        android:paddingRight="@dimen/titlebar_15dp"
        android:text="       sssssssss"
        android:textColor="@color/common_style_text_color"
        android:textSize="15dp" />

    <RelativeLayout
        android:id="@+id/item_simulation_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simulation_title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/netschool_20dp"
        android:paddingLeft="@dimen/titlebar_15dp"
        android:paddingRight="@dimen/titlebar_15dp">

        <TextView
            android:id="@+id/simulation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/08/25 开始"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/simulation_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@id/simulation_time"
            android:ellipsize="end"
            android:maxLength="15"
            android:maxLines="1"
            android:text="原创试题高分必备原创试题高分必备高分必备高分必备高分必备原创试题高分必备原创试题高分必备高分必备高分必备高分必备"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible" />

        <TextView
            android:id="@+id/simulation_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/simulation_desc"
            android:text="未开始"
            android:textColor="@color/item_sc_status_color"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_simulation_status"
        android:background="@color/background_color" />

    <com.huatu.handheld_huatu.business.matches.customview.ShakeImageView
        android:id="@+id/iv_shake"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@+id/view_divider"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/gift_box" />
</RelativeLayout>