<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <com.huatu.widget.ArrowlineUpView
        android:id="@+id/arrow_up"

        android:layout_width="8dp"
        android:layout_height="5dp"
        android:layout_gravity="right"
        android:layout_marginRight="14dp" />
    <LinearLayout
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/popup_menu_bg_drawable"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5.0dip">
        <TextView
            android:id="@+id/pop_menu_upreport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/play_share_action_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="14dp"
            android:paddingTop="10.0dip"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
        <View
            android:layout_width="120dp"
            android:layout_height="1px"
            android:background="@color/outline_last_layer_text" />
        <TextView
            android:id="@+id/video_play_pop_qq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:drawableLeft="@mipmap/play_suggest_action_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="14dp"
            android:paddingTop="10.0dip"
            android:text="@string/suggest"
            android:textColor="@color/onlive_action_text_selector"
            android:textSize="16.0sp" />


    </LinearLayout>
</LinearLayout>