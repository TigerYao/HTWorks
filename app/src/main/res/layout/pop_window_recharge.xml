<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/text_p4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A8000000" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/white_round_eight_bg">
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/mip_close"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#FF4A4A4A"
        android:layout_marginTop="15dp"
        android:text="确认支付"/>
    <TextView
        android:id="@+id/tv_to_recharge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_change_color"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_useful_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_to_recharge"
        android:paddingBottom="40dp"
        android:background="@color/white"
        android:text="可用图币："
        android:textColor="#FF6D7172"
        android:paddingLeft="25dp"/>
    <TextView
        android:id="@+id/tv_useful_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_useful_gold"
        android:layout_alignParentRight="true"
        android:textColor="#FF4A4A4A"
        android:textSize="14dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="40dp"
        />
    <TextView
        android:id="@+id/tv_need_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_useful_gold"
        android:paddingBottom="40dp"
        android:background="@color/white"
        android:text="需付图币："
        android:textColor="#FF6D7172"
        android:paddingLeft="25dp"/>

    <TextView
        android:id="@+id/tv_need_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_useful_count"
        android:layout_alignBottom="@id/tv_need_gold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:paddingBottom="40dp"
        android:textColor="#FF4A4A4A"
        android:textSize="20dp"/>
</RelativeLayout>
</RelativeLayout>