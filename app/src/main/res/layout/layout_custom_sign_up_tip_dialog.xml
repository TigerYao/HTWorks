<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.66"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="137dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/sc_main_card_bg">


        <TextView
            android:id="@+id/sign_up_tip1_tvview"
            android:layout_width="270dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="抱歉，您已错过本次模考，可在模考历史查看，或稍后报名参加下次模考"
            android:textColor="#666666"
            android:textSize="15sp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            />

        <TextView
            android:id="@+id/sign_up_tip_know_view"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="好的，知道了"
            android:textColor="@color/common_style_text_color"
            android:textSize="16dp"/>
    </LinearLayout>
</RelativeLayout>
