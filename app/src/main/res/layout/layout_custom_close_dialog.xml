<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_15dp"
        android:layout_marginTop="@dimen/common_15dp"
        android:background="@drawable/bg_rectangle_f5ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_dialog_title_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#060606"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/custom_dialog_message_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.7"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textColor="#353535"
            android:textSize="12sp" />

        <View
            android:id="@+id/custom_dialog_divider"
            android:layout_width="250dp"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/gray011" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="43dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_dialog_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/gray_999999"
                android:textSize="15sp" />

            <View
                android:id="@+id/custom_dialog_btn_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray011" />

            <TextView
                android:id="@+id/custom_dialog_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/main_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="@dimen/common_dimens_30dp"
        android:layout_height="@dimen/common_dimens_30dp"
        android:layout_gravity="right"
        android:scaleType="centerCrop"
        android:src="@drawable/tip_close_icon" />
</FrameLayout>