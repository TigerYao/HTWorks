<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_top_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filter_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:minHeight="@dimen/common_dimens_80dp"
            android:padding="@dimen/common_15dp"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:paddingLeft="13dp"
            android:paddingTop="8dp"
            android:paddingRight="13dp"
            android:paddingBottom="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/course_evalute_close_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_detail_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#FF3F47"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/course_detail_origin_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#9b9b9b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/course_groupbuy_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_6dp"
            android:background="@drawable/shape_red_groupbuy_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textsize_8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/course_detail_buy_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#6D7172"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_10dp"
        android:layout_marginTop="@dimen/common_10dp"
        android:layout_marginRight="@dimen/common_10dp"
        android:layout_marginBottom="@dimen/common_10dp"
        android:background="@drawable/line_diviver" />

    <TextView
        android:id="@+id/filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_10dp"
        android:text="地区"
        android:textColor="#ff000000"
        android:textSize="14sp" />

    <ScrollView
