<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/evaluate_report_cView"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.66"
        android:background="#000000" />
<RelativeLayout
    android:id="@+id/rl_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/eva_rep_tip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/level_tips_img"
        />
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_below="@id/eva_rep_tip_iv"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/sc_main_card_bg">


        <TextView
            android:id="@+id/sign_up_tip1_tvview"
            android:layout_width="270dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="等级系统全新上线\n特权好礼等你开启！"
            android:textColor="#666666"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            ></View>

        <TextView
            android:id="@+id/level_tip_know_view"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="了解更多"
            android:textColor="#e9304e"
            android:textSize="16dp"/>
    </LinearLayout>
</RelativeLayout>

</FrameLayout>