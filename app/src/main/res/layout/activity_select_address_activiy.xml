<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/layout_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f6f6f7"
        app:layout_heightPercent="12.7%w">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/button_TitleBar_Back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#f6f6f7"
            app:layout_widthPercent="13.8%w">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/zc_back"
                app:layout_heightPercent="40%w"
                app:layout_widthPercent="20%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/textView_TitleBar_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:maxLength="13"
            android:text="选择收货地址"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_textSizePercent="4.4%w" />
        <TextView
            android:id="@+id/button_TitleBar_Operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            app:layout_marginRightPercent="3.3%w"
            android:text="管理"
            android:gravity="center"
            android:textColor="#333333"
            app:layout_textSizePercent="4.4%w"
            android:clickable="true"
             />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <ListView
        android:id="@+id/refreshlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_TitleBar"
        android:layout_above="@+id/rl_bottom"
        android:background="#ffffff"
        android:cacheColorHint="#000000"
        android:divider="@null"
        android:listSelector="@drawable/select_list_select"
        android:scrollbars="none"
        />
    <RelativeLayout
        android:id="@+id/rl_dizhi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_TitleBar"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/iv_dizhi"
            android:layout_width="215dp"
            android:layout_height="184dp"
            android:layout_marginTop="150dp"
            app:layout_widthPercent="59.7%w"
            app:layout_heightPercent="45.5%w"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="41.6%w"
            android:background="@drawable/dizhitu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_dizhi"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            app:layout_marginTopPercent="4.1%w"
            android:textColor="#999999"
            app:layout_textSizePercent="4.1%w"
            android:text="您还没有添加收货地址哦~"/>
    </RelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="18.8%w"
        android:background="#f1f1f1"
        >

        <Button
            android:id="@+id/button_add_address"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:background="#439c44"
            android:text="新增收货地址"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_heightPercent="12.2%w"
            app:layout_marginTopPercent="3.3%w"
            app:layout_marginBottomPercent="3.3%w"
            app:layout_marginLeftPercent="3.3%w"
            app:layout_marginRightPercent="3.3%w"
            app:layout_textSizePercent="4.1%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
