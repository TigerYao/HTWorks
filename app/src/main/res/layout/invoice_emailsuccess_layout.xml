<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">


    <com.huatu.widget.KitkatProfileFramLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
         android:orientation="horizontal">

        <com.huatu.handheld_huatu.ui.TitleBar
            android:id="@id/xi_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xd_toolbar_height" />
    </com.huatu.widget.KitkatProfileFramLayout>
    <ImageView
        android:src="@mipmap/email_success_iocn"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交成功"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff9b9b9b"
        android:textSize="14sp"
        />


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="174dp"
        android:gravity="center"
        android:id="@+id/show_detail_btn"
        android:layout_marginTop="40dp"
        android:layout_height="44dp"
        android:text="查看开票详情"
        android:textColor="#ff6d7172"
        android:textSize="16sp"
        />
</LinearLayout>