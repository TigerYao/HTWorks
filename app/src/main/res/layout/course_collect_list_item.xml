<?xml version="1.0" encoding="utf-8"?>
<com.nalan.swipeitem.recyclerview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@id/whole_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chk_btn"
            style="@style/deleteCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chk_btn"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_course_mine_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:text="2018江苏省面试特训专享版（20小时1对1学习）09班"
                android:textColor="#ff4a4a4a"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:text="5月19日 - 4月20日 (520课时)"
                android:textColor="#ff6c7172"
                android:textSize="12sp" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@+id/title_layout"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/chk_btn">


            <ImageView
                android:id="@+id/teacher_first_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/image11" />

            <ImageView
                android:id="@+id/teacher_second_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/image11" />

            <ImageView
                android:id="@+id/teacher_third_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/image11" />


            <TextView
                android:id="@+id/tv_person_rush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:text="12,283人已抢"
                android:textColor="#ff6c7172"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="48dp"
                android:layout_marginRight="15dp"
                android:text="9"
                android:textColor="#ffff3f47"
                android:textSize="16sp" />

            <com.huatu.handheld_huatu.ui.MultTagView
                android:id="@+id/tv_tag"
                android:layout_marginLeft="171dp"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="12dp"  />

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="48dp"
                android:layout_marginRight="15dp"
                android:text="免费"
                android:textColor="#ff4dd006"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.huatu.handheld_huatu.ui.MultTextView
                android:id="@+id/techer_des_txt"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp" />

        </FrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_delete"
            android:text="取消收藏"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>
</com.nalan.swipeitem.recyclerview.SwipeItemLayout>