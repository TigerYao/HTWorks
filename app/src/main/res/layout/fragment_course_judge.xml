<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@id/whole_content"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/comm_bottom_line_bg2"
        android:minHeight="30dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/comment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:text="学员评价"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/course_judge_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#9b9b9b"
            android:textSize="12sp"/>
    </LinearLayout>


    <com.huatu.handheld_huatu.ui.recyclerview.RecyclerViewEx
        android:id="@+id/course_judge_page_list"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  />
    <include
        layout="@layout/loading_default_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
  </FrameLayout>
