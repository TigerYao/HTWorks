<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    app:layout_widthPercent="75%w"
    app:layout_heightPercent="33%w"
    android:background="@drawable/dialog_callserver" >
    <TextView
        android:id="@+id/tv_dialog_content_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        app:layout_marginLeftPercent="3.8%w"
        app:layout_marginTopPercent="4.1%w"
        app:layout_marginRightPercent="3.8%w"
        app:layout_marginBottomPercent="4.1%w"
        android:text="确认要删除此收货地址吗？确认要删除此收货地址吗？确认要删除此收货地址吗？确认要删除此收货地址吗？"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_textSizePercent="4.1%sw"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_dialog_content_top"
        android:layout_marginTop="15dp"
        app:layout_marginTopPercent="4.1%w"
        android:background="#66888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/v_line"
        >

        <Button
            android:id="@+id/bt_dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:text="确认"
            android:textColor="@color/red120"
            android:textSize="18sp"
            app:layout_textSizePercent="5%sw"
            />
    </LinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>