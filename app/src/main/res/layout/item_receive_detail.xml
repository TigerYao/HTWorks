<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
<ImageView
    android:id="@+id/iv_avatar"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"
    android:background="@mipmap/me_default_avater"/>
    <TextView
        android:id="@+id/tv_weChat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="100dp"
        android:textSize="14dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/blackF4"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_received_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_below="@id/tv_weChat_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:textSize="10dp"
        android:textColor="@color/blackF4"
        android:layout_marginRight="100dp"/>
    <TextView
        android:id="@+id/tv_received_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#FF3F47"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>