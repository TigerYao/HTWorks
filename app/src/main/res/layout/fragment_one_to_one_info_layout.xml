<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.huatu.handheld_huatu.view.TopActionBar
        android:id="@+id/one_to_one_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topbarTitle="一对一学员信息卡"
        app:topbarIsLeftShow="true"
        app:topbarLeftText="关闭"
        app:topbarIsRightShow="true"
        app:topbarRightText="完成"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/one_to_one_title_bar"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#f1f1f1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学员信息"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="必填"
                    android:textSize="14sp"
                    android:textColor="@color/main_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学员姓名"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="10dp"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:maxLength="20"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="性别"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/one_to_one_gender_female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/icon_checked"
                    android:drawablePadding="5dp"
                    android:text="女"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333" />
                <TextView
                    android:id="@+id/one_to_one_gender_male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/icon_check_normal"
                    android:drawablePadding="5dp"
                    android:text="男"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="学历"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_grade_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawablePadding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:hint="请选择"
                    android:textColorHint="@color/gray_999999"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="联系电话"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_phone_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="number"
                    android:maxLength="11"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="QQ"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_qq_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="number"
                    android:maxLength="12"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#f1f1f1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="考试信息"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="必填"
                    android:textSize="14sp"
                    android:textColor="@color/main_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="课程名称"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_course_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="考试类别"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_exam_type_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="请填写"
                    android:background="@color/transparent"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="text"
                    android:maxLength="20"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="考试经历"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_experience_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawablePadding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:hint="请选择"
                    android:textColorHint="@color/gray_999999"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="笔试/面试"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_interview_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawablePadding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:hint="请选择"
                    android:textColorHint="@color/gray_999999"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:id="@+id/ll_score"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="分数和名次"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_score_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="number"
                    android:maxLength="9"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="报考职位"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_exam_position_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="text"
                    android:maxLength="20"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="额外要求"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_exam_require_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:paddingLeft="10dp"
                    android:drawablePadding="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:hint="请选择"
                    android:textColorHint="@color/gray_999999"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#f1f1f1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="其他信息"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="选填"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="年龄"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_age_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawablePadding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:hint="请选择"
                    android:textColorHint="@color/gray_999999"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:id="@+id/ll_one_to_one_position_number_des"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/one_to_one_position_number_des"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="职位招聘人数"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_position_number_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="number"
                    android:maxLength="9"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/one_to_one_time_des"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="笔试时间"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <TextView
                    android:id="@+id/one_to_one_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:drawableRight="@drawable/icon_arrow_right"
                    android:drawablePadding="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:hint="请选择"
                    android:textColorHint="@color/gray_999999"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#f1f1f1" />
            <LinearLayout
                android:id="@+id/one_to_one_interview_ratio_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="面试比例"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"/>
                <EditText
                    android:id="@+id/one_to_one_interview_ratio_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:lines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:background="@color/transparent"
                    android:hint="请填写"
                    android:textColorHint="@color/gray_999999"
                    android:textSize="14sp"
                    android:textColor="@color/gray_333333"
                    android:inputType="number"
                    android:maxLength="20"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>