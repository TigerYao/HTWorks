<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mock_card_bg"
    tools:context=".business.matchsmall.adapter.MatchAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sc_main_card_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--title-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="国考万人模国考万人模国考万人模国考万人模国考万人模"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--考试时间-->
        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试时间："
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.12.28-2018.12.29"
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--考试知识点-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考察知识："
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="马克思主义，毛泽东思想，邓小平理论， 中共党史，哲学，时政，生活常识"
                android:textColor="#EC74A0"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--考试概览-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模考概览："
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:text="本测验共有20道题，标准用时25分钟"
                android:textColor="#4A4A4A"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <!--人报名-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有"
                android:textSize="14sp" />

            <!--988-->
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="8888"
                android:textColor="#FF3F47"
                android:textSize="22sp" />

            <!--人报名-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人参加测验"
                android:textSize="14sp" />
        </LinearLayout>

        <!--我要报名-->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_go"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/sc_sign_up_btn_bg"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="开始考试"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/rl_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_match_class_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/small_match_class_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_class"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_class_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="常识判断专项小模考（一期）直播解析"
                    android:textColor="#FF6D73"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_class_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="中午12:00准时开讲"
                    android:textColor="#BB7C80"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>