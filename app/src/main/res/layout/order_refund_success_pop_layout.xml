<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/bg_rectangle_dfffffff">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/order_refund_success_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/order_refund_sucess"/>
        <TextView
            android:id="@+id/order_refund_success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_refund_success_img"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:text="退款申请成功，等着收钱吧"
            android:textColor="@color/main_color"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/order_refund_success_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/order_refund_success_title"
            android:layout_below="@id/order_refund_success_title"
            android:layout_marginTop="10dp"
            android:text="提交申请后将于7个工作日内到帐"
            android:includeFontPadding="false"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>
