<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bottom_downloadState"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_heightPercent="13.33%w">

        <TextView
            android:id="@+id/tv_downloading"
            android:layout_width="@dimen/afc_30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/divider_above_tab_index"
            android:gravity="center"
            android:text="进行中(0)"
            android:textColor="#787878"
            app:layout_textSizePercent="29.16%h" />

        <TextView
            android:id="@+id/tv_downloadFinish"
            android:layout_width="@dimen/afc_30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_green003"
            android:gravity="center"
            android:text="已完成(0)"
            android:textColor="@color/white"
            app:layout_textSizePercent="29.16%h" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>