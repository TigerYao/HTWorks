<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:minHeight="122dp"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    app:layout_paddingLeftPercent="3.6%w"
    app:layout_paddingRightPercent="4.1%w"
    app:layout_heightPercent="33.8%w">


    <ImageView
        android:id="@+id/item_shop_img"
        android:layout_width="118dp"
        android:layout_height="86dp"
        android:layout_centerVertical="true"
        app:layout_heightPercent="23.8%w"
        app:layout_widthPercent="32.7%w"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/item_shop_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/item_shop_img"
        android:ellipsize="end"
        android:gravity="top"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:text="@string/lesson_tv_content"
        android:textColor="@color/text_color_dark"
        android:textSize="@dimen/text_size"
        app:layout_marginLeftPercent="2.7%w"
        app:layout_marginTopPercent="4.1%w"
        app:layout_textSizePercent="3.8%w"
        />

    <TextView
        android:id="@+id/item_shop_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_shop_img"
        android:layout_alignLeft="@id/item_shop_tv_title"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="价格"
        android:textSize="@dimen/text_size"
        app:layout_textSizePercent="3.8%w"/>


    <TextView
        android:id="@+id/item_shop_tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_shop_tv_price"
        android:layout_alignBottom="@+id/item_shop_img"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_shop_tv_end_time"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="课时"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_small" />


</com.zhy.android.percent.support.PercentRelativeLayout>
