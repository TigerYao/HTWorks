<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_evaluate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textSize="15sp"
        android:paddingRight="30dp"
        app:layout_paddingRightPercent="8.3%w"
        app:layout_marginLeftPercent="4.1%w"
        app:layout_marginTopPercent="5.5%w"
        app:layout_textSizePercent="4.1%w" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_evaluate_title"
        android:layout_below="@+id/tv_evaluate_title"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        app:layout_marginBottomPercent="5.5%w"
        app:layout_marginTopPercent="4.1%w">

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/teacher_kxing" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_star1"
            android:background="@drawable/teacher_kxing"
            app:layout_marginLeftPercent="2.77%w" />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_star2"
            android:background="@drawable/teacher_kxing"
            app:layout_marginLeftPercent="2.77%w" />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/teacher_kxing"
            app:layout_marginLeftPercent="2.77%w"
            android:layout_alignTop="@+id/tv_evaluate_defen"
            android:layout_toRightOf="@+id/iv_star3"
            android:layout_toEndOf="@+id/iv_star3" />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_star4"
            android:background="@drawable/teacher_kxing"
            app:layout_marginLeftPercent="2.77%w" />

        <TextView
            android:id="@+id/tv_evaluate_defen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_star5"
            android:paddingLeft="9dp"
            android:text=""
            android:textColor="#999999"
            android:textSize="15sp"
            app:layout_paddingLeftPercent="2.5%w"
            app:layout_textSizePercent="4.1%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/teacher_jiantou"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="12dp"
        android:paddingLeft="15dp"
        app:layout_paddingRightPercent="3.3%w"
        app:layout_paddingLeftPercent="3.6%w"
        />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>