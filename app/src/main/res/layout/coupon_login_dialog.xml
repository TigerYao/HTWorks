<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        
        <View
            android:background="#FE3848"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"></View>
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/coupn_top_icon"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF533B"
                android:paddingBottom="10dp"
                android:paddingTop="30dp"
                android:text="注册成功\n给你上岸礼包"
                android:id="@+id/title_name_txt"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_need_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="+50图币"
                    android:textStyle="bold"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@mipmap/coupn_tubi_icon"
                    android:textColor="#ffeb2604"
                    android:textSize="12sp" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_growup_value"
                    android:layout_width="wrap_content"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@mipmap/coupn_grow_icon"
                    android:layout_height="wrap_content"
                    android:text="+50成长值"
                    android:textColor="#ffeb2604"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/coupn_top2_icon" />

       <!-- <com.huatu.widget.ReverseWaveView

            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="15dp"/>-->
    </FrameLayout>

    <ScrollView
        android:id="@+id/coupon_list_container"
        android:background="#FE3848"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.huatu.widget.LinearLayoutListView
            android:id="@+id/xi_product_list"
            android:paddingTop="10dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <FrameLayout
        android:background="@drawable/bg_coupn_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.huatu.handheld_huatu.ui.RoundbgTextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:qmui_backgroundColor="#FEEC5C"
            app:qmui_radiusBottomLeft="6dp"
            app:qmui_radiusTopLeft="6dp"
            app:qmui_radiusBottomRight="6dp"
            app:qmui_radiusTopRight="6dp"
            android:id="@+id/quick_look_btn"
            android:layout_width="158dp"
            android:layout_height="38dp"
            android:text="查看礼包课程"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#D62722"
            android:textSize="16sp"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/close_btn"
        android:layout_marginTop="15dp"
        android:src="@mipmap/coupn_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />
</LinearLayout>


