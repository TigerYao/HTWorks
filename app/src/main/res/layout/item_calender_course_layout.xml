<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:paddingBottom="10dp"
        android:layout_height="38dp">
        <ImageView
            android:layout_gravity="bottom"
            android:src="@mipmap/play_time_circle_icon"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/calender_course_item_time"
            android:layout_width="match_parent"
            android:textStyle="bold|italic"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="18:00-21:45"
            android:layout_marginLeft="25dp"
            android:textColor="#ffff6d73"
            android:textSize="15sp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="17dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/calender_course_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textStyle="bold"
            android:text="7月3日：理论精讲：常识6"
            android:textColor="#ff4a4a4a"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/calender_course_item_from"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:text="19国考4期（6月15日开课）"
            android:textColor="#ff4a4a4a"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/calender_course_item_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:text="授课老师：李梦娇"
            android:textColor="#ff4a4a4a"
            android:textSize="14sp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="6.5dp"
        android:layout_marginTop="26dp"
        android:background="#FF6D73"
        android:layout_width="1dp"
        android:layout_height="match_parent"></View>
    <View
        android:layout_marginLeft="6.5dp"
        android:id="@+id/top_line"
        android:background="#FF6D73"
        android:layout_width="1dp"
        android:layout_height="8dp"></View>
</FrameLayout>
