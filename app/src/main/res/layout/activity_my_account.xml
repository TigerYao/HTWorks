<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar"
        android:background="#ffffff">


        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_left_top_bar"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_left"
                android:layout_marginLeft="15dp"
                android:padding="3dp" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <TextView
            android:id="@+id/tv_title_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的图币"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blackF4"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_top_title_bar"
        android:background="#dfdfdf"/>
    <RelativeLayout
        android:id="@+id/rl_study_money"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:minHeight="144dp"
        android:layout_below="@+id/line"
        >
    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_red_rule"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="可用图币"
        android:textColor="#ff3f47"
        android:gravity="center"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_balance_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_balance"
        android:layout_marginBottom="15dp"
        android:drawableLeft="@drawable/gold"
        android:drawablePadding="@dimen/athletic_exercise_8dp"
        android:textSize="42sp"
        android:textColor="#ff3f47"
        android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_account_detail"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:gravity="center"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/rl_study_money"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_balance_detail"
            android:layout_width="160dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:text="账户明细"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_rounded_corners_border"/>

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="160dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:text="立即充值"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_rounded_corners_border"
            android:layout_marginLeft="18dp"
            />
    </LinearLayout>


