<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/layout_TitleBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#f6f6f7"
        app:layout_heightPercent="12.7%w">


        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="取消"
            app:layout_marginLeftPercent="4.1%w" />

        <TextView
            android:id="@+id/textView_TitleBar_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:maxLength="13"
            android:text="评价"
            android:textColor="#333333"
            android:textStyle="bold"
            app:layout_textSizePercent="4.4%w" />

        <TextView
            android:id="@+id/tv_queding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="确定"
            app:layout_marginRightPercent="4.1%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_TitleBar">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_marginLeftPercent="4.1%w"
            app:layout_marginRightPercent="4.4%w"
            app:layout_marginTopPercent="5.5%w"
            app:layout_textSizePercent="4.4%w" />

        <ImageView
            android:id="@+id/iv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="20dp"
            android:background="@mipmap/image11"
            app:layout_marginTopPercent="5.5%w" />

        <TextView
            android:id="@+id/tv_teachername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_teacher"
            app:layout_marginLeftPercent="3.3%w"
            app:layout_marginTopPercent="11.5%w" />

        <TextView
            android:id="@+id/tv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv_teacher"
            android:layout_below="@+id/iv_teacher"
            android:layout_marginTop="20dp"
            android:text="评分"
            android:textColor="#999999"
            android:textSize="15sp"
            app:layout_marginTopPercent="5.5%w"
            app:layout_textSizePercent="4.1%w" />

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_star1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/tv_tv"
            android:layout_toRightOf="@+id/tv_tv"
            app:layout_heightPercent="8.3%w"
            app:layout_marginLeftPercent="3.8%w"
            app:layout_widthPercent="8.3%w">

            <ImageView
                android:id="@+id/iv_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/teacher_kxing" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_star2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/rl_star1"
            android:layout_toRightOf="@+id/rl_star1"
            app:layout_heightPercent="8.3%w"
            app:layout_widthPercent="8.3%w">

            <ImageView
                android:id="@+id/iv_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/teacher_kxing"
                app:layout_marginLeftPercent="2.77%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_star3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/rl_star1"
            android:layout_toRightOf="@+id/rl_star2"
            app:layout_heightPercent="8.3%w"
            app:layout_widthPercent="8.3%w">

            <ImageView
                android:id="@+id/iv_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/teacher_kxing"
                app:layout_marginLeftPercent="2.77%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_star4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/rl_star1"
            android:layout_toRightOf="@+id/rl_star3"
            app:layout_heightPercent="8.3%w"
            app:layout_widthPercent="8.3%w">

            <ImageView
                android:id="@+id/iv_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/teacher_kxing"
                app:layout_marginLeftPercent="2.77%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_star5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/rl_star1"
            android:layout_toRightOf="@+id/rl_star4"
            app:layout_heightPercent="8.3%w"
            app:layout_widthPercent="8.3%w">

            <ImageView
                android:id="@+id/iv_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/teacher_kxing"
                app:layout_marginLeftPercent="2.77%w" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="25dp"
        android:background="#f1f1f1"
        app:layout_marginTopPercent="6.9%w">

        <EditText
            android:id="@+id/et_comment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/tv_num"
            android:background="@null"
            android:gravity="top"
            android:hint="课程内容如何?老师讲的怎么样？快来说说感受吧~"
            android:textSize="16sp"
			android:maxLength="200"
            app:layout_paddingLeftPercent="3.3%w"
            app:layout_paddingRightPercent="5.5%w"
            app:layout_paddingTopPercent="5.1%w"
            app:layout_textSizePercent="4.44%w" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_marginTopPercent="3.06%"
            android:layout_marginBottom="11dp"
            android:layout_toLeftOf="@+id/tv_remain_count"
            android:text="0"
            android:textSize="14sp"
            app:layout_marginBottomPercent="3.06%w"
            app:layout_textSizePercent="4.1%w" />

        <TextView
            android:id="@+id/tv_remain_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:text="/200"
            android:textSize="14sp"
            app:layout_marginBottomPercent="3.06%w"
            app:layout_paddingRightPercent="5.5%w"
            app:layout_textSizePercent="4.1%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>