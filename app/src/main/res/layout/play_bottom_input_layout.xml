<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:id="@+id/contentView"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <LinearLayout
        android:clickable="true"
        android:background="#bf000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtcolor_txt"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"

                android:gravity="center"
                android:text="Aa"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/input_edTxt"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="90dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/play_input_danmu_bg"
                android:hint="请输入弹幕"
                android:maxLength="25"
                android:imeOptions="flagNoExtractUi"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/input_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="96dp"

                android:gravity="center"
                android:text="0/25"
                android:textColor="#9B9B9B"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/send_btn"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/play_send_danmu_bg"
                android:gravity="center"
                android:text="发送"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/emotion_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="96dp"
                android:layout_height="22dp"
                android:text="选择弹幕颜色"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />

            <LinearLayout
                android:id="@+id/color_set_layout"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:padding="3dp"
                    android:tag="0"
                    android:layout_marginRight="14dp"
                    android:layout_height="38dp"

                    app:qmui_backgroundColor="#ffffff"
                    app:qmui_isRadiusAdjustBounds="true"
                    />

                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:padding="3dp"
                    app:qmui_backgroundColor="#FF3F47"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:tag="1"
                    android:layout_marginRight="14dp"
                    />

                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:padding="3dp"
                    android:tag="2"
                    app:qmui_backgroundColor="#FFCA0E"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:layout_marginRight="14dp"
                    />

                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:padding="3dp"
                    app:qmui_backgroundColor="#F5FF00"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:tag="3"
                    android:layout_marginRight="14dp"
                    />

                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:padding="3dp"
                    app:qmui_backgroundColor="#A8FF3F"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:tag="4"
                    android:layout_marginRight="14dp"
                    />

                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:qmui_backgroundColor="#00AB26"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:padding="3dp"
                    android:tag="5"
                    android:layout_marginRight="14dp"
                    />
                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:qmui_backgroundColor="#56D1FF"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:padding="3dp"
                    android:tag="6"
                    android:layout_marginRight="14dp"
                    />
                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:qmui_backgroundColor="#5163F1"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:padding="3dp"
                    android:tag="7"
                    android:layout_marginRight="14dp"
                    />
                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:qmui_backgroundColor="#BA10FF"
                    app:qmui_isRadiusAdjustBounds="true"
                    android:padding="3dp"
                    android:tag="8"
                    android:layout_marginRight="14dp"
                    />
                <com.huatu.handheld_huatu.ui.RoundbgView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:padding="3dp"
                    app:qmui_backgroundColor="#FF3F9C"
                    app:qmui_isRadiusAdjustBounds="true"
                      android:tag="9"
                    />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>