<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <View
        android:id="@+id/item_pager_more_head_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1"
        />

    <RelativeLayout
        android:id="@+id/item_pager_more_type_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_pager_more_type_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/homef_pt_exam_real"
            />

        <TextView
            android:id="@+id/item_pager_more_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:text="公务员"
            android:layout_toRightOf="@id/item_pager_more_type_icon_iv"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="15dp"/>
        <ImageView
            android:id="@+id/iv_redPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/update_red_point"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_toRightOf="@id/item_pager_more_type_tv"
            />

        <ImageView
            android:id="@+id/item_pager_more_type_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_right"
            />


    </RelativeLayout>

    <View
        android:id="@+id/item_pager_more_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/background_color"
        />

    <View
        android:id="@+id/item_pager_more_footer_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f1f1f1"
        />
</LinearLayout>
