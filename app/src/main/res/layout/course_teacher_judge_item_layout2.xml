<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comm_bottom_line_bg2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/teacher_judge_item_header"
            android:src="@mipmap/user_default_avater"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/teacher_judge_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/accountInformation"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <View
            android:id="@+id/divider_flag"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#4a4a4a"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:text="12"
            android:id="@+id/teacher_judge_item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:textColor="#9b9b9b"
            android:textSize="14sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <com.huatu.widget.CustomRatingBar
            android:id="@+id/teacher_judge_item_rating"
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            app:starCount="5"
            app:starEmpty="@mipmap/emptystar"
            app:starFill="@mipmap/kitstar"
            app:starHalf="@mipmap/halfstar"
            app:starImageSize="14dp"
            app:starPadding="2dp"
            app:starStep="0"
            android:layout_marginRight="5dp"
            app:stepSize="Full"/>
    </LinearLayout>
    <TextView
        android:id="@+id/teacher_judge_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="#6d7172"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/teacher_judge_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#9b9b9b"
            android:maxLines="1"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/teacher_judge_item_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#9b9b9b"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
