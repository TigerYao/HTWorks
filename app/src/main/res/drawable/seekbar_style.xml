<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background" android:height="2dp" android:gravity="center_vertical">
        <shape>
            <corners android:radius="1dip" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:id="@android:id/progress" android:height="2dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                <solid android:color="#FF3F47" />

            </shape>
        </clip>
    </item>

</layer-list>