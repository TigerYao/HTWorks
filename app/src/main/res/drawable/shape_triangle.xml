<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_id"  android:height="6dp" android:width="6dp" android:top="10dp">
        <!-- 正三角 -->
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="-40%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <solid android:color="#FF3F47"/>
            </shape>
        </rotate>
     </item>


</layer-list>
