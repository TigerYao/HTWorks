<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_id"   android:top="10dp">
        <!-- 倒三角 -->
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%"  >
            <shape android:shape="rectangle">
                <size
                    android:width="6dp"
                    android:height="6dp" />
                <solid android:color="#FF3F47"/>
            </shape>
        </rotate>
     </item>


</layer-list>
