<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--圆角矩形边框-->
    <!-- 设置红色背景色 -->
    <solid android:color="#ff3f47" />

    <!-- 设置红色边框 -->
    <stroke
        android:width="2px"
        android:color="#ff3f47" />
    <!-- 设置四个圆角的半径 -->
    <corners
      android:radius="8dp" />
    <!-- 设置边距,让空间大一点 -->
    <padding
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp" />

</shape>