<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:width="208dp" android:height="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="#00000000"
                android:startColor="#80000000"
                android:type="linear"
                android:useLevel="true" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="27dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="27dp" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/common_18dp"
        android:gravity="right|center"
        android:left="@dimen/common_dimens_180dp"
        android:right="5dp"
        android:top="@dimen/common_18dp">
        <bitmap android:src="@drawable/icon_video_scroll_kuijin" />
    </item>

</layer-list>