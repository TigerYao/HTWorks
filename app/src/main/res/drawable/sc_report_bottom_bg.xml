<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
            <solid android:color="@color/sc_report_bottom_stroke" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:top="1px">
        <!--边框里面背景颜色 白色-->
        <shape>
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />
            <solid android:color="@color/sc_report_common_bg" />
        </shape>
    </item>
</layer-list>