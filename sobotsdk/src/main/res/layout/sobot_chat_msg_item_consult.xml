<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/sobot_list_divider_height">
    <TextView
        android:id="@+id/sobot_reminde_time_Text"
        style="@style/sobot_center_remind_time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <com.sobot.chat.widget.BorderImageView
            android:id="@+id/sobot_goods_pic"
            android:layout_width="120dp"
            android:layout_height="@dimen/sobot_DIMEN_100PX"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:src="@drawable/sobot_icon_consulting_default_pic" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/sobot_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="@dimen/sobot_msg_text_size" />

            <TextView
                android:id="@+id/sobot_goods_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:ellipsize="end"
                android:layout_marginTop="24dp"
                android:maxLines="2"
                android:textColor="#676e6f"
                android:textSize="15sp" />

            <Button
                android:id="@+id/sobot_goods_sendBtn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_gravity="right|bottom"
                 android:background="@drawable/sobot_goods_info_btn_selector"
                android:text="@string/sobot_button_send"
                android:textColor="@color/sobot_white"
                android:textSize="@dimen/sobot_text_font_small_16sp" />

            <TextView
                android:id="@+id/sobot_goods_label"
                android:textSize="@dimen/sobot_text_font_normal"
                android:layout_gravity="left|bottom"
                android:layout_width="wrap_content"
                android:textColor="@color/sobot_goods_info_btn_bgcolor"
                android:layout_height="wrap_content"/>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>